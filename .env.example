# ================================
# 部署环境
# Supported values are `production`, `test`, `dev`. Default is `dev`.
# ================================
DEPLOY_ENV=dev


# ================================
# OPENAI配置
# ================================
OPENAI_BASE_URL=https://api.openai-proxy.org/v1
OPENAI_API_KEY=
OPENAI_MODEL_NAME=gpt-4o


# ================================
# LANGFUSE配置
# ================================
LANGFUSE_CLOUD_LOG="https://us.cloud.langfuse.com/project/cml0go0lg00taad076b0xu3pn/traces"
LANGFUSE_SECRET_KEY=""
LANGFUSE_PUBLIC_KEY=""
LANGFUSE_BASE_URL="https://us.cloud.langfuse.com"
LANGFUSE_DEBUG=false


# ================================
# 日志配置
# ================================
LOG_LEVEL=INFO
LOG_ROTATION=00:00
LOG_RETENTION='366 days'


# ================================
# 并发配置
# ================================
MAX_CONCURRENT_REQUESTS=20


# ================================
# 颜色检测配置
# ================================
# 要筛选的颜色类型（单个）
# 可选值: dark_black, deep_red, deep_blue, light_green, light_gray, white, beige
# 留空则禁用颜色检测
FILTER_COLOR=dark_black

# 颜色检测方法
# 可选值: opencv, llm
# opencv: 使用传统图像处理（OpenCV + HSV），速度快但不准确
# llm: 使用大模型视觉能力，准确但成本较高
COLOR_DETECTION_METHOD=opencv

# 边缘裁剪比例（仅对 opencv 方式生效）
# 推荐值: 0.10-0.20，取值 0 则禁用裁剪
# 去除图片四周边框，避免白色/浅色背景干扰颜色检测
COLOR_CROP_RATIO=0.2
